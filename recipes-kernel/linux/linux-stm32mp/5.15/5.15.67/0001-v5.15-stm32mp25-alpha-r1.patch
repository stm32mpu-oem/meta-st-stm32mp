+	.probe		= dcmipp_isp_probe,
+	.remove		= dcmipp_isp_remove,
+	.id_table	= dcmipp_isp_driver_ids,
+	.driver		= {
+		.name	= DCMIPP_ISP_DRV_NAME,
+	},
+};
