+	case V4L2_PIX_FMT_RGB565:
+	case V4L2_PIX_FMT_YUYV:
+	case V4L2_PIX_FMT_UYVY:
+		return (width * height * 2);
+	case V4L2_PIX_FMT_RGB24:
+		return (width * height * 3);
+	case V4L2_PIX_FMT_ARGB32:
